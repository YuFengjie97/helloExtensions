{
  "manifest_version": 3,
  "name": "黑暗凄色幽冥幻想",
  "version": "1.0",
  "description": "你好啊",
  "action": {
    "default_icon": {
      "16": "images/icon-gift.png",
      "32": "images/icon-gift.png",
      "48": "images/icon-gift.png",
      "128": "images/icon-gift.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "content_scripts": [
    {
      "js": ["dist/content.js"],
      "matches": [
        "<all_urls>",
        "https://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*"
      ]
    }
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "permissions": ["tabs","storage", "activeTab", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
